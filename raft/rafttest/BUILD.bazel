    name = "go_default_test",
    srcs = [
        "network_test.go",
        "node_bench_test.go",
        "node_test.go",
    ],
    embed = [":go_default_library"],
    deps = [
        "//raft:go_default_library",
        "//raft/raftpb:go_default_library",
    ],
